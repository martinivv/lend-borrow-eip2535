{
    "exclude": ["node_modules/**/*.ts"],
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "lib": ["ES2022"],
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "ts-node": { "files": true, "transpileOnly": true, "swc": true }
}
