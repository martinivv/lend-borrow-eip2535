{
   "name": "@martinivv/monorepo",
   "author": "martinivv",
   "version": "0.0.1",
   "packageManager": "yarn@1.22.19",
   "scripts": {
      "postinstall": "yarn typechain",
      "test": "hardhat test",
      "lint": "yarn lint:sol && yarn lint:ts && yarn prettier:check",
      "lint:sol": "solhint --max-warnings 0 \"src/contracts/**/*.sol\"",
      "lint:ts": "eslint --ignore-path ./.eslintignore --ext .js,.ts .",
      "clean": "rimraf ./build ./types/typechain && yarn typechain",
      "prettier:check": "prettier --check \"**/*.{js,json,md,sol,ts,yml}\"",
      "prettier:write": "prettier --write \"**/*.{js,json,md,sol,ts,yml}\"",
      "deploy": "hardhat deploy",
      "compile": "hardhat compile",
      "typechain": "hardhat typechain"
   },
   "devDependencies": {
      "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
      "@nomicfoundation/hardhat-ethers": "^3.0.4",
      "@nomicfoundation/hardhat-network-helpers": "^1.0.6",
      "@nomicfoundation/hardhat-toolbox": "^3.0.0",
      "@nomicfoundation/hardhat-verify": "^1.0.0",
      "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.4.1",
      "@swc/core": "^1.3.95",
      "@typechain/ethers-v6": "^0.5.1",
      "@typechain/hardhat": "^8.0.0",
      "@types/chai": "^4.3.4",
      "@types/mocha": "^10.0.0",
      "@types/node": "^20.4.9",
      "@typescript-eslint/eslint-plugin": "6.7.4",
      "@typescript-eslint/parser": "^6.3.0",
      "chai": "^4.3.7",
      "dotenv": "^16.0.3",
      "eslint": "^8.28.0",
      "eslint-config-prettier": "^9.0.0",
      "ethers": "^6.4.0",
      "fs-extra": "^11.1.1",
      "hardhat": "^2.12.2",
      "hardhat-deploy": "^0.11.29",
      "hardhat-diamond-abi": "^3.0.1",
      "hardhat-gas-reporter": "^1.0.9",
      "mocha": "^10.1.0",
      "prettier": "^3.0.0",
      "prettier-plugin-solidity": "^1.1.2",
      "rimraf": "^5.0.1",
      "solhint": "^3.4.0",
      "solhint-plugin-prettier": "0.0.3",
      "solidity-coverage": "^0.8.2",
      "ts-generator": "^0.1.1",
      "ts-node": "^10.9.1",
      "typechain": "^8.2.0",
      "typescript": "^5.1.6"
   },
   "dependencies": {
      "@chainlink/contracts": "0.7.0",
      "@openzeppelin/contracts": "5.0.0"
   }
}
